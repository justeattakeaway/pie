{
  "$schema": "https://turborepo.org/schema.json",
  "extends": [
    "//"
  ],
  "pipeline": {
    "generate:typography-docs": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "scripts/generate-typography-docs.js"
      ],
      "outputs": [
        "stories/pie-css-typography.mdx"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "^build",
        "^generate:component-statuses",
        "generate:typography-docs"
      ]
    },
    "dev:testing": {
      "cache": false,
      "dependsOn": [
        "^build",
        "^generate:component-statuses"
      ]
    },
    "build": {
      "cache": true,
      "dependsOn": [
        "^build",
        "^generate:component-statuses",
        "generate:typography-docs"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:testing": {
      "cache": true,
      "dependsOn": [
        "^build",
        "^generate:component-statuses"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:chromatic": {
      "cache": true,
      "dependsOn": [
        "^build",
        "^generate:component-statuses"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "cache": true,
      "dependsOn": []
    }
  }
}
