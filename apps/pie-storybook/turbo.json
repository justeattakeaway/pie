{
  "$schema": "https://turborepo.org/schema.json",
  "extends": [
    "//"
  ],
  "pipeline": {
    "dev": {
      "cache": false,
      "dependsOn": [
        "^build",
        "generate:component-statuses"
      ]
    },
    "build": {
      "cache": true,
      "dependsOn": [
        "^build",
        "generate:component-statuses"
      ]
    },
    "generate:component-statuses": {
      "inputs": [
        "../../packages/components/**/package.json"
      ],
      "cache": true,
      "outputs": [
        "component-statuses.json"
      ]
    }
  }
}
