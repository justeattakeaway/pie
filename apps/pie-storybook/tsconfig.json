{
  "compilerOptions": {
      "module": "CommonJS",
      "target": "es6",
      "lib": ["es6", "dom"],
      "esModuleInterop": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "sourceMap": false,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
      ".storybook/**/*",
      "stories/**/*",
      "types/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}
