<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ site_title }}</title>
    </head>
    <body>
        <h1>
            {{ site_title }}
        </h1>
        <hr/>
        {{ content | safe }}        
        <hr/>
        <small>
            <p>Documentation for <a href="https://vue.pie.design/" target="_blank" rel="noopener noreferrer">Pie Design Components</a> in Storybook.<p>
        </small>
        {% include "nav.njk" %}

        {{ { name: 'About', attrs: { height: icon_height, width: icon_height, fill: icon_fill } } | pieIconsSvg | safe }}
