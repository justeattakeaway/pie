---
site_title: Pie Site
layout: layouts/default-layout.njk
---

<div class="c-contentPage">
    <div class="c-contentPage-header">
        <h1 class="alpha--standout">
            {{ title }}
        </h1>
        <p class="c-contentPage-header-subheading">
            {{ description }}
        </p>
    </div>

    <nav aria-label="Secondary navigational tabs">
        <ul class="c-tabs">
            {%- for entry in collections.all | eleventyNavigation(navKey) %}
              <li {% if entry.url == page.url %} aria-selected="true" {% endif %} aria-selected="false" class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
            {%- endfor %}
        </ul>
    </nav>

    <div class="c-contentPage-main">
        {{ content | safe }}
    </div>
</div>
