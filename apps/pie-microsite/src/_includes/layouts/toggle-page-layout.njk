---
site_title: Pie Site
layout: layouts/page-layout.njk
defaultContentKey: toggled-content-a
hiddenContentKey: toggled-content-b
togglePage: true
---

<h2>{{ subtitle }}</h2>
<p>{{ subtitleDescription }}</p>
<div class="c-toggle">
    <div
        id="page-content-toggle-a-wrapper"
        class="c-toggle-item {% if selectedToggle == togglePageOptions.A %}is-active{% endif %}">
        <input id="page-content-toggle-a" class="c-toggle-input" type="radio"/>
        <label class="c-toggle-label" for="page-content-toggle-a">
            {{ defaultContentLabel }}
        </label>
    </div>
    <div
        id="page-content-toggle-b-wrapper"
        class="c-toggle-item {% if selectedToggle == togglePageOptions.B %}is-active{% endif %}">
        <input id="page-content-toggle-b" class="c-toggle-input" type="radio" checked=""/>
        <label class="c-toggle-label" for="page-content-toggle-b">
            {{ hiddenContentLabel }}
        </label>
    </div>
</div>
<hr/> 
{{ content | safe }}
