{# Placeholder Nav #}
<nav>
    {% set navPages = collections.all | eleventyNavigation("Pages") %}
    <ul>
        {% for category in navPages %}
            <li>
                <details {% if page.url.includes(category.url) %} open{% endif %}>
                    <summary>
                        {{ category.title }}
                    </summary>
                    {% if category.children.length %}
                        <ul>
                            {% for subpage in category.children %}
                            <li>
                                <a href="{{ subpage.url }}" {% if subpage.url == page.url %} class="active"{% endif %}>{{ subpage.title }}</a>
                            </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </details>
            </li>
        {% endfor %}
    </ul>
</nav>
