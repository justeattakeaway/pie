{% set toggleIconFill = { tokenName: 'interactive-light', tokenPath: ['alias', 'default'] } | pieDesignTokenColours %}

<input id="navToggle" class="c-navToggle-input is-visuallyHidden" type="checkbox" aria-label="Toggle Navigation" />
<label class="c-navToggle"  for="navToggle">
    {{ { name: 'MenuSmall', attrs: { fill: toggleIconFill, height: '24', width: '24' } } | pieIconsSvg | safe }}
    {{ { name: 'Close', attrs: { fill: toggleIconFill, height: '24', width: '24' } } | pieIconsSvg | safe }}
</label>

<header class="c-header">
    <h1 class="is-visuallyHidden">
        {{ site_title }}
    </h1>
    <a class="c-header-logo" href="/">
        <img src="/assets/img/pie-logo.svg"/>
    </a>
</header>
