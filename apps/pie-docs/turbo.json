{
  "$schema": "https://turborepo.org/schema.json",
  "extends": [
    "//"
  ],
  "pipeline": {
    "clean": {
      "cache": false,
      "dependsOn": []
    },
    "build": {
      "cache": true,
      "dependsOn": [
        "^build",
        "clean",
        "generate:component-statuses"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:dev": {
      "cache": true,
      "dependsOn": [
        "^build",
        "generate:component-statuses"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "build:dev"
      ]
    },
    "generate:component-statuses": {
      "inputs": [
        "../../packages/components/**/package.json"
      ],
      "cache": true,
      "outputs": [
        "component-statuses.json"
      ]
    },
    "test:generate-routes": {
      "cache": true,
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "test/snapshots/expected-routes.snapshot.json"
      ]
    }
  }
}
