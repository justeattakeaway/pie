{% set heroSrc = ['/assets/img/heroes/', heroImageSrc] | join | url %}

<div class="c-hero" data-test-id="site_content">
    <div class="c-heroBanner">
        <div class="c-content-container">
            <div class="c-heroBanner-heading">
                <div class="c-heroBanner-heading-text">
                    <h1 class="alpha--standout">
                        {{ title }}
                    </h1>
                    <p class="c-content-header-description">
                        {{ description }}
                    </p>
                    <a class='o-btn' href={{ heroCtaHref | url }}>{{ heroCtaTitle }}</a>
                </div>
                <div class="u-showAboveMid c-heroBanner-image">
                    <img src={{ heroSrc }} alt="" />
                </div>
            </div>
        </div>
    </div>
    <div class="c-razor"></div>
    <div class="c-heroContent">
        <div class="c-content">
            <div class="c-content-container">
                {{ content | safe }}
            </div>
        </div>
    </div>
</div>
