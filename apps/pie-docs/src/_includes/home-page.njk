{% set heroSrc = ['/assets/img/heroes/', heroImageSrc] | join | url %}
<div class="c-heroContentLayout" data-test-id="site_content">
    <div class="c-heroBanner c-heroContentLayout-pad">
        <div class="c-heroBanner-content">
            <div class="c-heroBanner-header">
                <div class="c-heroBanner-text">
                    <h1 class="alpha--standout">
                        {{ title }}
                    </h1>
                    <p class="c-heroBanner-description">
                        {{ description }}
                    </p>
                    <a class='o-btn c-heroBanner-btn' href={{ heroCtaHref | url }}>{{ heroCtaTitle }}</a>
                </div>
                <div class="u-showAboveMid c-heroBanner-image">
                    <img src={{ heroSrc }} alt=""/>
                </div>
            </div>
        </div>
    </div>
    <div class="c-razor"></div>
    <div class="c-heroContentLayout-content c-heroContentLayout-pad">
        <div class="c-content">
            <div class="c-content-container">
                {{ content | safe }}
            </div>
        </div>
    </div>
</div>
