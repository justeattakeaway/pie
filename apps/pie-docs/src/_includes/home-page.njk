{% set heroSrc = ['/assets/img/heroes/', heroImageSrc] | join | url %}

{% set razor = ['/assets/img/Razor.svg'] | join | url %}

<div class="homePage--">
    <div class="c-content-container c-homePage-heading">
        <div class="c-homePage-title">
            <h1 class="c-homePage-header-heading">
                {{ title }}
            </h1>
            <p class="c-homePage-description">
                {{ description }}
            </p>
            <a class='o-btn' href={{ heroCtaHref | url }}>{{ heroCtaTitle }}</a>
        </div>
        <div class="u-showAboveMid c-homePage-image">
        {% if heroImageSrc %}
            <img src={{ heroSrc }} alt="" />
        {% endif %}
        </div>
    </div>
        <div class="header">
        <div class="circle"></div>
        </div>
        <div data-test-id="site_content" class="c-contentPage-content">
        {# temporarily adding a condition to check if the title is PIE Design System - this allows an empty home page not to display the coming soon graphic in the page body  #}
        {% if content %}
                <div class="c-content-container c-homePage-content">
                    {{ content | safe }}
                </div>
        {% else %}
            <div class="c-contentPage-content u-noPad">
                <div class="c-content-container">
                    {# By default we will show the coming soon graphic for an empty page within a tabbed section #}
                    {% include "coming-soon.njk" %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
</div>
