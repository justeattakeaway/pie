{% set heroSrc = ['/assets/img/heroes/', heroImageSrc] | join | url %}

<div class="c-contentPage">
    <div
        class="c-contentPage-header {% if heroImageSrc %}c-contentPage-header--hero{% endif %}"
        {% if heroImageSrc %} style="--hero-img-src: url({{heroSrc}})" {% endif %}>
        <div class="c-content-container">
            <h1 class="c-contentPage-header-heading alpha--standout">
                {{ title }}
            </h1>
            <p class="c-contentPage-header-description">
                {{ description }}
            </p>
        </div>
    </div>

    {% if navKey %}
        {% include "page-tabs.njk" %}
    {% endif %}

    {# temporarily adding a condition to check if the title is Principles for Interfaces and Experiences - this allows an empty home page not to display the coming soon graphic in the page body #}
    {% if content or title === 'Principles for Interfaces and Experiences' %}
        <div class="c-contentPage-content">
            <div class="c-content-container">
                {{ content | safe }}
            </div>
        </div>
    {% else %}
        <div class="c-contentPage-content u-noPad">
            <div class="c-content-container">
                {# By default we will show the coming soon graphic for an empty page within a tabbed section #}
                {% include "coming-soon.njk" %}
            </div>
        </div>
    {% endif %}
</div>

