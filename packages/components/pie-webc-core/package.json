{
  "name": "@justeattakeaway/pie-webc-core",
  "version": "0.19.1",
  "description": "PIE design system base classes, mixins and utilities for web components",
  "type": "module",
  "main": "dist/index.js",
  "author": "Just Eat Takeaway.com - Design System Team",
  "license": "Apache-2.0",
  "bundlewatch": {
    "files": [
      {
        "path": "./packages/components/pie-webc-core/dist/index.js",
        "maxSize": "5kb",
        "compression": "none"
      }
    ]
  },
  "scripts": {
    "build": "run -T vite build",
    "lint:scripts": "run -T eslint .",
    "lint:scripts:fix": "run -T eslint . --fix",
    "test": "run -T vitest run --config ../../../vite.config.js",
    "test:ci": "yarn test",
    "test:browsers-setup": "npx playwright-lit-setup",
    "test:browsers": "npx playwright test -c ./playwright-lit.config.ts",
    "test:browsers:ci": "yarn test:browsers",
    "test:watch": "run -T vitest"
  },
  "dependencies": {
    "lit": "3.1.2"
  },
  "devDependencies": {
    "@justeattakeaway/pie-components-config": "0.13.0"
  },
  "volta": {
    "extends": "../../../package.json"
  }
}
