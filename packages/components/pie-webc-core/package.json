    "test:browsers:ci": "yarn test:browsers",
    "test:watch": "run -T vitest"
  },
  "dependencies": {
    "lit": "3.2.0"
  },
  "devDependencies": {
    "@justeattakeaway/pie-components-config": "0.20.1"
  },
  "volta": {
    "extends": "../../../package.json"
  }
