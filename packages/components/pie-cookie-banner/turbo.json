{
  "$schema": "https://turborepo.org/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": [
        "^build",
        "build:react-wrapper"
      ],
      "outputs": [
        "dist/**",
        "cdn_dist/**"
      ]
    },
    "test:browsers": {
      "cache": true,
      "dependsOn": [],
      "inputs": [
        "./**",
        "../../../apps/pie-storybook/stories/testing/pie-cookie-banner.test.stories.ts"
      ]
    },
    "test:browsers:ci": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": [
        "./**",
        "../../../apps/pie-storybook/stories/testing/pie-cookie-banner.test.stories.ts"
      ]
    },
    "test:visual": {
      "cache": false,
      "dependsOn": [],
      "inputs": [
        "./**",
        "../../../apps/pie-storybook/stories/testing/pie-cookie-banner.test.stories.ts"
      ]
    },
    "test:visual:ci": {
      "cache": false,
      "dependsOn": ["^build"],
      "inputs": [
        "./**",
        "../../../apps/pie-storybook/stories/testing/pie-cookie-banner.test.stories.ts"
      ]
    }
  }
}
