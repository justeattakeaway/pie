{
  "compilerOptions": {
      "target": "ES6",
      "module": "ES2022",
      "lib": ["es2020", "DOM", "DOM.Iterable"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "inlineSources": true,
      "outDir": "../pie-webc-core/compiled",
      "baseUrl": "../pie-webc-core",
      "paths": {
        "@/*": ["../pie-webc-core/src/*"]
      },
      "rootDir": "../pie-webc-core",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true
  },
  "include": ["../pie-webc-core/src/**/*.ts","../pie-webc-core/declaration.d.ts", "../pie-webc-core/test/**/*.ts"],
  "exclude": []
}
