{
  "name": "@justeattakeaway/pie-modal",
  "version": "1.6.1",
  "description": "PIE design system modal built using web components",
  "repository": {
    "type": "git",
    "url": "https://github.com/justeattakeaway/pie",
    "directory": "packages/components/pie-modal"
  },
  "homepage": "https://pie.design/components/modal/code/",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "custom-elements.json",
    "src",
    "dist",
    "**/*.d.ts"
  ],
  "pieMetadata": {
    "componentStatus": "stable"
  },
  "scripts": {
    "build": "run -T vite build",
    "build:react-wrapper": "npx build-react-wrapper",
    "create:manifest": "yarn cem analyze --litelement",
    "lint:scripts": "run -T eslint .",
    "lint:scripts:fix": "run -T eslint . --fix",
    "lint:style": "run -T stylelint ./src/**/*.{css,scss}",
    "lint:style:fix": "yarn lint:style --fix",
    "watch": "run -T vite build --watch",
    "test:browsers": "npx playwright test -c ./playwright-lit.config.ts",
    "test:browsers:ci": "yarn test:browsers",
    "test:visual": "run -T cross-env-shell PERCY_TOKEN=${PERCY_TOKEN_PIE_MODAL} percy exec --allowed-hostname cloudfront.net -- npx playwright test -c ./playwright-lit-visual.config.ts",
    "test:visual:ci": "yarn test:visual"
  },
  "author": "Just Eat Takeaway.com - Design System Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.9.0",
    "@justeat/pie-design-tokens": "6.10.0",
    "@justeattakeaway/pie-button": "1.5.1",
    "@justeattakeaway/pie-components-config": "0.20.1",
    "@justeattakeaway/pie-css": "0.16.0",
    "@justeattakeaway/pie-monorepo-utils": "0.5.1",
    "@justeattakeaway/pie-text-input": "0.27.5",
    "@justeattakeaway/pie-wrapper-react": "0.14.3",
    "@types/body-scroll-lock": "3.1.2",
    "cem-plugin-module-file-extensions": "0.0.5"
  },
  "volta": {
    "extends": "../../../package.json"
  },
  "dependencies": {
    "@justeattakeaway/pie-button": "1.5.1",
    "@justeattakeaway/pie-icon-button": "1.4.3",
    "@justeattakeaway/pie-icons-webc": "1.8.0",
    "@justeattakeaway/pie-spinner": "1.1.1",
    "@justeattakeaway/pie-webc-core": "0.25.1",
    "body-scroll-lock": "3.1.5",
    "dialog-polyfill": "0.5.6"
  },
  "customElements": "custom-elements.json",
  "sideEffects": [
    "dist/*.js"
  ]
}
