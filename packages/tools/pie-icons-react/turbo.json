{
  "$schema": "https://turborepo.org/schema.json",
  "extends": [
    "//"
  ],
  "pipeline": {
    "build:icons": {
      "cache": true,
      "dependsOn": [
        "@justeattakeaway/pie-icons#build",
        "clean"
      ],
      "outputs": [
        "icons/**"
      ]
    },
    "build": {
      "cache": true,
      "dependsOn": [
        "^build",
        "build:icons"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "icons/**"
      ],
      "outputs": [
        "dist/**",
        "esm/**"
      ]
    }
  }
}
