{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "cache": true,
      "dependsOn": [
        "^build",
        "build:react-wrapper"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "build:react-wrapper": {
      "cache": true,
      "dependsOn": [
        "create:manifest"
      ],
      "inputs": [
        "src/**",
        "custom-elements.json"
      ],
      "outputs": [
        "src/react.ts"
      ]
    },
    "create:manifest": {
      "cache": true,
      "outputs": [
        "custom-elements.json"
      ]
    },
    "build:examples": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        "dist/**",
        ".next/**",
        ".nuxt/**",
        ".output/**"
      ]
    },
    "generate:examples": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".nuxt/**",
        ".output/**"
      ]
    },
    "watch": {
      "cache": true,
      "dependsOn": []
    },
    "clean": {
      "cache": false,
      "dependsOn": []
    },
    "test": {
      "cache": true,
      "dependsOn": [
        "build",
        "^test"
      ],
      "outputs": [
        "**/__snapshots__/**",
        "**/snapshots/**"
      ]
    },
    "test:watch": {
      "cache": false,
      "dependsOn": [
        "build",
        "^test"
      ]
    },
    "test:ci": {
      "cache": true,
      "dependsOn": [
        "build",
        "^test:ci"
      ],
      "outputs": [
        "**/__snapshots__/**",
        "**/snapshots/**"
      ]
    },
    "test:coverage": {
      "cache": false
    },

    "test:browsers-setup": {
      "cache": true,
      "inputs": [
        "./configs/pie-components-config/playwright/index.html",
        "./configs/pie-components-config/playwright/index.ts"
      ],
      "outputs": [
        "**/playwright/index.html",
        "**/playwright/index.ts"
      ]
    },
    "test:browsers": {
      "cache": true,
      "dependsOn": [
        "^build",
        "test:browsers-setup"
      ],
      "outputs": []
    },
    "test:browsers:ci": {
      "cache": true,
      "dependsOn": [
        "^build",
        "test:browsers-setup"
      ]
    },
    "test:visual": {
      "cache": false,
      "dependsOn": [
        "^build",
        "test:browsers-setup"
      ]
    },
    "test:visual:ci": {
      "cache": false,
      "dependsOn": [
        "^build",
        "test:browsers-setup"
      ]
    },
    "lint:scripts": {
      "cache": true,
      "inputs": [
        "src/**",
        "src/react.ts"
      ],
      "outputs": []
    },
    "lint:scripts:fix": {
      "cache": false
    },
    "lint:style": {
      "cache": true,
      "outputs": []
    },
    "lint:style:fix": {
      "cache": false
    },
    "lint:examples": {
      "cache": true,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    }
  }
}
