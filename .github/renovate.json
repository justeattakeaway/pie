{
    "extends": [
      "schedule:weekly",
      ":rebaseStalePrs",
      ":disableMajorUpdates",
      ":dependencyDashboard",
      ":semanticCommits",
      ":semanticCommitScope({{parentDir}})"
    ],
    "prConcurrentLimit": 3,
    "major": false,
    "packageRules": [
        {
            "extends": [":semanticCommitScope(root)"],
            "matchDepTypes": ["devDependencies"],
            "matchPaths": ["+(package.json)"],
            "matchPackagePatterns": ["@babel/*", "babel-*"],
            "matchUpdateTypes": ["minor", "patch"],
            "groupName": "Root Babel devDependencies",
            "enabled": true
        },
        {
            "extends": ["monorepo:webdriverio", ":semanticCommitScope(root)"],
            "matchDepTypes": ["devDependencies"],
            "matchPaths": ["+(package.json)"],
            "matchPackagePatterns": ["wdio-*", "@percy/*", "allure-commandline"],
            "groupName": "Root WebDriver devDependencies",
            "matchUpdateTypes": [
              "patch",
              "minor"
            ],
            "enabled": true
        },
        {
          "extends": [":semanticCommitScope({{parentDir}})"],
          "matchDepTypes": ["devDependencies"],
          "matchPaths": ["apps/pie-microsite/**"],
          "groupName": "pie-microsite devDependencies",
          "matchUpdateTypes": [
            "patch",
            "minor"
          ],
          "enabled": true
        },
        {
          "extends": [":semanticCommitScope({{parentDir}})"],
          "matchDepTypes": ["devDependencies"],
          "matchPaths": ["packages/tools/pie-icons/**"],
          "groupName": "pie-icons devDependencies",
          "matchUpdateTypes": [
            "patch",
            "minor"
          ],
          "enabled": true
        },
        {
          "extends": [":semanticCommitScope({{parentDir}})"],
          "matchDepTypes": ["devDependencies"],
          "matchPaths": ["packages/tools/pie-icons-vue/**"],
          "groupName": "pie-icons-vue devDependencies",
          "matchUpdateTypes": [
            "patch",
            "minor"
          ],
          "enabled": true
        },
        {
          "extends": [":semanticCommitScope({{parentDir}})"],
          "matchDepTypes": ["devDependencies"],
          "matchPaths": ["packages/tools/pie-icons-react/**"],
          "groupName": "pie-icons-react devDependencies",
          "matchUpdateTypes": [
            "patch",
            "minor"
          ],
          "enabled": true
        },
        {
            "extends": [":semanticCommitScope(root)"],
            "matchPaths": ["+(package.json)"],
            "matchPackagePatterns": ["@justeat/*"],
            "groupName": "Root @justeat devDependencies",
            "matchUpdateTypes": [
              "patch",
              "minor"
            ],
            "enabled": true
        },
        {
          "extends": [":semanticCommitScope(root)"],
          "matchPackagePatterns": ["vue", "vue-template-compiler"],
          "groupName": "Root Vue devDependencies",
          "matchUpdateTypes": [
            "patch",
            "minor"
          ],
          "matchPaths": ["+(package.json)"],
          "enabled": true
        },
        {
          "extends": [":semanticCommitScope(root)"],
          "matchPackagePatterns": ["eslint", "eslint-*"],
          "groupName": "Root eslint devDependencies",
          "matchUpdateTypes": [
            "patch",
            "minor"
          ],
          "matchPaths": ["+(package.json)"],
          "enabled": true
        }
    ]
  }
