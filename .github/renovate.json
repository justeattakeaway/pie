{
    "extends": [
      "schedule:weekly",
      ":rebaseStalePrs",
      ":disableMajorUpdates",
      ":dependencyDashboard"
    ],
    "commitMessagePrefix": "renovate -",
    "prConcurrentLimit": 3,
    "major": false,
    "packageRules": [
        {
            "matchDepTypes": ["devDependencies"],
            "matchPaths": ["+(package.json)"],
            "matchPackagePatterns": ["@babel/*", "babel-*"],
            "matchUpdateTypes": ["minor", "patch"],
            "groupName": "Root Babel devDependencies",
            "enabled": true
        },
        {
            "extends": "monorepo:webdriverio",
            "matchDepTypes": ["devDependencies"],
            "matchPaths": ["+(package.json)"],
            "groupName": "Root WebDriverIO devDependencies",
            "matchUpdateTypes": [
              "patch",
              "minor"
            ],
            "enabled": true
        },
        {
            "matchDepTypes": ["devDependencies"],
            "matchPaths": ["+(package.json)"],
            "matchPackagePatterns": ["@justeat/*"],
            "groupName": "Root @justeat devDependencies",
            "matchUpdateTypes": [
              "patch",
              "minor"
            ],
            "enabled": true
        }
    ]
  }