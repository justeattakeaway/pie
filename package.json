{
  "name": "pie-monorepo",
  "description": "JustEatTakeaway",
  "version": "2.0.0",
  "keywords": [],
  "author": "JustEatTakeaway - Design System Web Team",
  "license": "Apache-2.0",
  "packageManager": "yarn@3.2.1",
  "private": true,
  "engines": {
    "node": "^18"
  },
  "workspaces": [
    "apps/**/*",
    "packages/**/*",
    "./"
  ],
  "scripts": {
    "watch": "turbo run watch --filter=!pie-monorepo",
    "build": "cross-env-shell turbo run build --filter=!pie-monorepo --filter=!'./apps/examples/*' --token=${TURBO_TOKEN}",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "clean": "turbo run clean --filter=!pie-monorepo",
    "cz": "./node_modules/cz-customizable/standalone.js",
    "dev": "turbo run dev --filter=!pie-monorepo",
    "lint:config": "eslint --fix turbo.json",
    "lint:scripts": "cross-env-shell turbo run lint:scripts --filter=!pie-monorepo --token=${TURBO_TOKEN}",
    "lint:scripts:fix": "turbo run lint:scripts:fix --filter=!pie-monorepo",
    "lint:style": "cross-env-shell turbo run lint:style --continue --filter=!pie-monorepo --token=${TURBO_TOKEN}",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "test": "cross-env-shell turbo run test --filter=!pie-monorepo --token=${TURBO_TOKEN}",
    "test:ci": "cross-env-shell turbo run test:ci --filter=!pie-monorepo --token=${TURBO_TOKEN}",
    "test:coverage": "turbo run test:coverage --filter=!pie-monorepo",
    "test:generate-routes": "turbo run test:generate-routes --filter=!pie-monorepo",
    "test:browsers": "cross-env-shell turbo run test:browsers --filter=!pie-monorepo --token=${TURBO_TOKEN}",
    "test:browsers:ci": "cross-env-shell turbo run test:browsers:ci --filter=!pie-monorepo --token=${TURBO_TOKEN}",
    "test:visual": "turbo run test:visual --filter=!pie-monorepo",
    "test:visual:ci": "turbo run test:visual:ci --filter=!pie-monorepo"
  },
  "stylelint": {
    "extends": "@justeat/stylelint-config-fozzie"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.6.0",
    "@babel/cli": "7.19.3",
    "@babel/core": "7.17.10",
    "@babel/eslint-parser": "7.19.1",
    "@babel/node": "7.16.8",
    "@babel/preset-env": "7.16.11",
    "@babel/register": "7.18.9",
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.1",
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@justeat/browserslist-config-fozzie": "1.x",
    "@justeat/pie-design-tokens": "4.2.0",
    "@justeat/stylelint-config-fozzie": "3.x",
    "@percy/cli": "1.20.3",
    "@percy/playwright": "1.0.4",
    "@playwright/test": "1.31.2",
    "allure-commandline": "2.20.1",
    "autoprefixer": "10.4.14",
    "babel-loader": "8.2.3",
    "commitizen": "4.3.0",
    "cross-env": "7.0.3",
    "cssnano": "5.1.13",
    "cz-customizable": "7.0.0",
    "dree": "3.4.2",
    "eslint": "8.14.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-json-format": "2.0.1",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "jest-expect-message": "1.1.3",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "postcss": "8.4.21",
    "postcss-cli": "10.0.0",
    "rimraf": "3.0.2",
    "sass": "1.54.0",
    "stylelint": "14.16.1",
    "stylelint-config-standard-scss": "5.0.0",
    "stylelint-order": "5.0.0",
    "turbo": "1.7.0",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vite-plugin-dts": "2.1.0",
    "vue": "2.7.14",
    "vue-template-compiler": "2.7.14"
  },
  "dependencies": {
    "@justeat/fozzie": "10.11.1",
    "@justeattakeaway/pie-icons": "2.2.0",
    "lit": "2.6.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "volta": {
    "node": "18.15.0",
    "yarn": "3.4.1"
  }
}
